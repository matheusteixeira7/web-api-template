generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
}

enum AppointmentStatus {
  SCHEDULED
  CONFIRMED
  CHECKED_IN
  COMPLETED
  NO_SHOW
  CANCELLED
}

enum BookingSource {
  MANUAL
  PUBLIC_LINK
  API
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  clinicId      String    @map("clinic_id")
  clinic        Clinic    @relation(fields: [clinicId], references: [id])
  name          String?
  password      String?
  role          UserRole  @default(USER)
  emailVerified Boolean   @default(false) @map("email_verified")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  deletedAt     DateTime? @map("deleted_at")

  refreshTokens       RefreshToken[]
  emailVerifyTokens   EmailVerifyToken[]
  passwordResetTokens PasswordResetToken[]
  oauthAccounts       OAuthAccount[]
  provider            Provider?

  // Appointments relations
  createdAppointments        Appointment[]            @relation("CreatedByUser")
  changedAppointmentStatuses AppointmentStatusEvent[] @relation("ChangedByUser")
  createdBlockedTimeSlots    BlockedTimeSlot[]        @relation("CreatedByUser")

  @@map("users")
}

model Clinic {
  id                      String    @id @default(uuid())
  name                    String    @map("name")
  contactEmail            String?   @map("contact_email")
  contactPhone            String?   @map("contact_phone")
  businessHours           Json?     @map("business_hours")
  timezone                String?   @map("timezone")
  averageAppointmentValue Decimal?  @map("average_appointment_value")
  subscriptionId          String?   @map("subscription_id")
  isSetupComplete         Boolean   @default(false) @map("is_setup_complete")
  createdAt               DateTime  @default(now()) @map("created_at")
  updatedAt               DateTime  @updatedAt @map("updated_at")
  deletedAt               DateTime? @map("deleted_at")

  users            User[]
  providers        Provider[]
  locations        ClinicLocation[]
  patients         Patient[]
  patientDocuments PatientDocument[]
  appointments     Appointment[]

  @@map("clinics")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("refresh_tokens")
}

model EmailVerifyToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("email_verify_tokens")
}

model PasswordResetToken {
  id        String    @id @default(uuid())
  token     String    @unique
  userId    String    @map("user_id")
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime  @map("expires_at")
  usedAt    DateTime? @map("used_at")
  createdAt DateTime  @default(now()) @map("created_at")

  @@map("password_reset_tokens")
}

model OAuthAccount {
  id         String @id @default(uuid())
  provider   String // "google" | "apple"
  providerId String @map("provider_id")
  userId     String @map("user_id")
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerId])
  @@map("oauth_accounts")
}

model ClinicLocation {
  id            String    @id @default(uuid())
  clinicId      String    @map("clinic_id")
  clinic        Clinic    @relation(fields: [clinicId], references: [id])
  name          String
  addressStreet String?   @map("address_street")
  addressCity   String?   @map("address_city")
  addressState  String?   @map("address_state")
  addressZip    String?   @map("address_zip")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  deletedAt     DateTime? @map("deleted_at")

  providerLocations ProviderLocation[]
  appointments      Appointment[]
  blockedTimeSlots  BlockedTimeSlot[]

  @@map("clinic_locations")
}

model Provider {
  id                         String    @id @default(uuid())
  clinicId                   String    @map("clinic_id")
  clinic                     Clinic    @relation(fields: [clinicId], references: [id])
  userId                     String?   @unique @map("user_id")
  user                       User?     @relation(fields: [userId], references: [id])
  name                       String
  specialty                  String?
  defaultAppointmentDuration Int       @default(30) @map("default_appointment_duration")
  workingHours               Json?     @map("working_hours")
  createdAt                  DateTime  @default(now()) @map("created_at")
  updatedAt                  DateTime  @updatedAt @map("updated_at")
  deletedAt                  DateTime? @map("deleted_at")

  providerLocations ProviderLocation[]
  appointments      Appointment[]
  blockedTimeSlots  BlockedTimeSlot[]

  @@map("providers")
}

model ProviderLocation {
  id         String         @id @default(uuid())
  providerId String         @map("provider_id")
  provider   Provider       @relation(fields: [providerId], references: [id])
  locationId String         @map("location_id")
  location   ClinicLocation @relation(fields: [locationId], references: [id])
  createdAt  DateTime       @default(now()) @map("created_at")

  @@unique([providerId, locationId])
  @@map("provider_locations")
}

model Patient {
  id              String    @id @default(uuid())
  clinicId        String    @map("clinic_id")
  clinic          Clinic    @relation(fields: [clinicId], references: [id])
  name            String
  phone           String
  email           String?
  dateOfBirth     DateTime? @map("date_of_birth") @db.Date
  medicalRecordId String?   @map("medical_record_id")
  notes           String?
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  deletedAt       DateTime? @map("deleted_at")

  documents    PatientDocument[]
  appointments Appointment[]

  @@index([clinicId])
  @@index([clinicId, phone])
  @@index([clinicId, name])
  @@index([clinicId, medicalRecordId])
  @@map("patients")
}

model DocumentType {
  id        String   @id @default(uuid())
  code      String   @unique @db.VarChar(20)
  name      String   @db.VarChar(100)
  createdAt DateTime @default(now()) @map("created_at")

  documents PatientDocument[]

  @@map("document_types")
}

model PatientDocument {
  id             String   @id @default(uuid())
  clinicId       String   @map("clinic_id")
  patientId      String   @map("patient_id")
  documentTypeId String   @map("document_type_id")
  value          String   @db.VarChar(30)
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  clinic       Clinic       @relation(fields: [clinicId], references: [id])
  patient      Patient      @relation(fields: [patientId], references: [id], onDelete: Cascade)
  documentType DocumentType @relation(fields: [documentTypeId], references: [id])

  @@unique([patientId, documentTypeId])
  @@unique([clinicId, documentTypeId, value])
  @@index([patientId])
  @@map("patient_documents")
}

// ============================================
// APPOINTMENT TABLES
// ============================================

model Appointment {
  id               String            @id @default(uuid())
  clinicId         String            @map("clinic_id")
  clinic           Clinic            @relation(fields: [clinicId], references: [id])
  patientId        String            @map("patient_id")
  patient          Patient           @relation(fields: [patientId], references: [id])
  providerId       String            @map("provider_id")
  provider         Provider          @relation(fields: [providerId], references: [id])
  locationId       String?           @map("location_id")
  location         ClinicLocation?   @relation(fields: [locationId], references: [id])
  appointmentStart DateTime          @map("appointment_start")
  appointmentEnd   DateTime          @map("appointment_end")
  // Denormalized fields for query performance
  patientName      String            @map("patient_name")
  patientPhone     String            @map("patient_phone")
  providerName     String            @map("provider_name")
  status           AppointmentStatus @default(SCHEDULED)
  notes            String?
  bookingSource    BookingSource?    @map("booking_source")
  confirmedAt      DateTime?         @map("confirmed_at")
  checkedInAt      DateTime?         @map("checked_in_at")
  createdById      String?           @map("created_by_id")
  createdBy        User?             @relation("CreatedByUser", fields: [createdById], references: [id])
  createdAt        DateTime          @default(now()) @map("created_at")
  updatedAt        DateTime          @updatedAt @map("updated_at")
  deletedAt        DateTime?         @map("deleted_at")

  statusEvents AppointmentStatusEvent[]

  @@index([clinicId])
  @@index([patientId])
  @@index([providerId])
  @@index([status])
  @@index([clinicId, appointmentStart])
  @@index([providerId, appointmentStart])
  @@map("appointments")
}

model AppointmentStatusEvent {
  id             String             @id @default(uuid())
  appointmentId  String             @map("appointment_id")
  appointment    Appointment        @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  previousStatus AppointmentStatus? @map("previous_status")
  newStatus      AppointmentStatus  @map("new_status")
  changedById    String?            @map("changed_by_id")
  changedBy      User?              @relation("ChangedByUser", fields: [changedById], references: [id])
  changedAt      DateTime           @default(now()) @map("changed_at")
  notes          String?

  @@index([appointmentId])
  @@index([appointmentId, changedAt])
  @@map("appointment_status_events")
}

model BlockedTimeSlot {
  id            String          @id @default(uuid())
  providerId    String          @map("provider_id")
  provider      Provider        @relation(fields: [providerId], references: [id])
  locationId    String?         @map("location_id")
  location      ClinicLocation? @relation(fields: [locationId], references: [id])
  startDatetime DateTime        @map("start_datetime")
  endDatetime   DateTime        @map("end_datetime")
  reason        String?
  createdById   String?         @map("created_by_id")
  createdBy     User?           @relation("CreatedByUser", fields: [createdById], references: [id])
  createdAt     DateTime        @default(now()) @map("created_at")

  @@index([providerId])
  @@index([providerId, startDatetime, endDatetime])
  @@index([startDatetime, endDatetime])
  @@map("blocked_time_slots")
}
