{
  "name": "@workspace/database",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "db:generate": "prisma generate",
